{
	"compilerOptions": {
		"importHelpers": true,
		"target": "es2017",
		"disableSizeLimit": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"removeComments": false,
		"preserveConstEnums": false,
		"sourceMap": false,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"lib": [ "es2017", "dom" ],
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		]
	},
	"include": [
		"content/**/*",
		"resource/**/*",
		"*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"typings"
	]
}
